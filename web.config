<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <system.webServer>
    <!-- Tell IIS to run server.js via iisnode -->
    <handlers>
      <add name="iisnode" path="server.js" verb="*" modules="iisnode" />
    </handlers>

    <rewrite>
      <rules>
        <!-- Forward ALL requests to server.js -->
        <rule name="NextJSRewrite" stopProcessing="true">
          <match url=".*" />
          <action type="Rewrite" url="server.js" />
        </rule>
      </rules>
    </rewrite>

    <!-- Prevent IIS from blocking execution -->
    <security>
      <requestFiltering allowDoubleEscaping="true" />
    </security>

    <!-- Important for Next.js (no HTML fallback) -->
    <httpErrors existingResponse="PassThrough" />
    <directoryBrowse enabled="false" />
  </system.webServer>
</configuration>
